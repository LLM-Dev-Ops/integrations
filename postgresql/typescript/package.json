{
  "name": "@llmdevops/postgresql-integration",
  "version": "1.0.0",
  "description": "PostgreSQL database integration for LLM Dev Ops platform - connection pooling, query execution, transactions, and read/write separation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "database",
    "connection-pool",
    "transactions",
    "integration",
    "llmdevops"
  ],
  "author": "LLM Dev Ops",
  "license": "MIT",
  "dependencies": {
    "@integrations/telemetry-emitter": "file:../../shared/telemetry-emitter",
