# RuvVector Postgres Configuration
# Copy this file to .env and customize as needed

# Database credentials
POSTGRES_USER=ruvector
POSTGRES_PASSWORD=ruvector_secret
POSTGRES_DB=ruvector
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Database URL for integrations to connect
# Format: postgresql://user:password@host:port/database

# Use this when connecting from the host machine:
DATABASE_URL=postgresql://ruvector:ruvector_secret@localhost:5432/ruvector

# Use this when connecting from another Docker container:
# DATABASE_URL=postgresql://ruvector:ruvector_secret@ruvector-postgres:5432/ruvector

# Use this in CI environments (GitHub Actions):
# DATABASE_URL=postgresql://ruvector:ruvector_secret@postgres:5432/ruvector
